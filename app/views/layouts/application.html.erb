<!DOCTYPE html>
<html>
  <head>
    <title>RoboEco</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', 'navbar', 'home', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link href="https://fonts.googleapis.com/css2?family=Jura&family=Kelly+Slab&display=swap" rel="stylesheet">
  </head>

  <body>
    <header>
      <h1>Robo Eco</h1>
      <nav>
        <%= link_to "Home", home_path %>
        <%= link_to "Robots", robots_path %>
        <%= link_to "Products", product_types_path %>
        <%= link_to "Orders", shipping_orders_path %>
      </nav>
    </header>
    <div id="main-content">
      <%= yield %>
    </div>
  </body>
</html>
